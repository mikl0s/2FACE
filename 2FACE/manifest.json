{
  "manifest_version": 3,
  "name": "2FACE",
  "version": "1.1",
  "description": "A secure 2FA Chrome Extension with PIN protection",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}